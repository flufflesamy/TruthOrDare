<Window x:Class="TruthOrDare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TruthOrDare"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid>
        <Label Content="Truth Or Dare!" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="36" FontWeight="Bold"/>
        <Button x:Name="StartButton" Content="Start!" HorizontalAlignment="Center" Margin="0,379,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Click="Button_Click"/>
        <TextBox x:Name="Participants" HorizontalAlignment="Left" Margin="48,95,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="286"/>
    </Grid>
</Window>
