<Window x:Class="TruthOrDare.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TruthOrDare"
        mc:Ignorable="d"
        Title="InputDialog" Height="121" Width="329">
    <StackPanel>
        <TextBlock Text="Enter Name" FontSize="16" />
        <TextBox x:Name="ResponseTextBox" FontSize="16" />
        <Button Content="OK" Click="OKButton_Click" FontSize="16" />
    </StackPanel>
</Window>
